<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#3aaf83"
    android:gravity="center_horizontal|center_vertical"
    tools:context=".MainActivity"
    >





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Ali SMS Looper"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Number"
                android:paddingLeft="10dp"
                android:elevation="2dp"
                android:inputType="phone"
                android:layout_marginTop="20dp"
                android:background="#efefef"
                android:id="@+id/number"
                android:maxLength="13"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                />

            <SearchView
                android:id="@+id/contactSearch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:queryHint="Contact Search"
                />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingLeft="10dp"
                android:hint="Text Massage here"
                android:elevation="2dp"
                android:background="#efefef"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:id="@+id/textArea"
                android:drawableLeft="@drawable/ic_textsms_black_24dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:hint="Iterations"
                android:elevation="2dp"
                android:background="#efefef"
                android:inputType="numberDecimal"
                android:layout_marginTop="20dp"
                android:id="@+id/iterations"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_loop_black_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/errorText"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_red_light"
                />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Send"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#3aaf83"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>